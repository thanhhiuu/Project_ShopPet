@model List<Category>

<partial name ="_NotificaTion"/>

<h2>Category List</h2>
<hr />

<div class="container-fluid d-flex justify-content-end">
    <a class="btn btn-secondary my-4" asp-action="Create">Create</a>
</div>
<table class="table table-success ">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Display Order</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Bạn có chắc chắn sẽ xóa không ?')" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            }
    </tbody>
</table>