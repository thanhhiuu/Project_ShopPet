
@model List<Product>;
<partial name="_Notification" />
<div class="container mt-4 d-flex justify-content-between ">
    <div >
        <h2>
            LIST PRODUCT
        </h2>
    </div>
    <div>
        <a asp-action="Create",  class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i> Create New
        </a>

    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Category Name </th>
            <th>IMG</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Name</td>
                <td>@x.Gia</td>
                <td>@x.Category.Name</td>
                <td class="text-center">
                    <img src="/@x.ImageUrl" alt="Alternate Text" style="width: 50px; height: 60px; object-fit: cover;" />
                </td>
                <td>

                    <a asp-action="Edit" asp-route-id="@x.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i> Edit</a>

                    <a asp-action="Delete" asp-route-id="@x.Id" onclick="return confirm('Bạn có chắc chắn sẽ xóa không ?')" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
<!---->
<div>
    <ul class="pagination justify-content-center">
        <li class="page-item disabled">
            <a class="page-link" asp-action="Index" asp-route-page="1">&laquo;</a>
        </li>
        @for (int i = 1; i <= ViewBag.PageSum; i++)
        {
            <li class="page-item @(ViewBag.PageIndex==i? "active":"")">
                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
            </li>
        }

        <li class="page-item">
            <a class="page-link" asp-action="Index" asp-route-page="@ViewBag.PageSum">&raquo;</a>
        </li>
    </ul>
</div>
