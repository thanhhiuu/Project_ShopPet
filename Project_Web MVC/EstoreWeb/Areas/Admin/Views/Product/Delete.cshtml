@model Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Thông tin cần biêt</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
    
        <dt class = "col-sm-2">
            <label asp-for="Name" class="control-label"></label>
        </dt>
        <dd class = "col-sm-10">  
                <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="ChuThich" class="control-label"></label>
        </dt>
        <dd class = "col-sm-10">  
                <input asp-for="ChuThich" class="form-control" />
            <span asp-validation-for="ChuThich" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Gia" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            <input asp-for="Gia" class="form-control" />
            <span asp-validation-for="Gia" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="CategoryId" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.ListCategory">
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="ImageUrl" class="control-label"></label>
        </dt>
        <dd class="col-sm-10">
            <img src="/@Model.ImageUrl" width="300xp" asp-validation-for="ImageUrl" class="text-danger"></img>
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-danger" >Back to List</a>
    </form>
</div>
