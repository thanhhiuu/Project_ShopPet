@model List<Product>
@{
    ViewData["Title"] = "Home Page";

}
<div class="container">

  <div class="row">

    @for (int i = 0; i < Model.Count; i++)

    {

      if (i % 4 == 0) {

        @:<div class="row" style="height: 60vh;">

        }
      <div class="col-3">

        <div class="card" style="height: 400px;">

          <img src="@Model[i].ImageUrl" style="height: 250px;" class="card-img-top img-fluid">

          <div class="card-body">

            <h5 class="card-title">@Model[i].Name</h5>  

            <p class="card-text">@Model[i].Gia</p>

            <a asp-action="Detail" asp-route-id="@Model[i].Id" class="btn btn-primary">Xem chi tiết</a>

          </div>

        </div>

      </div>

      

      if (i % 4 == 3) {

        @:</div>

      }

    }

  </div>

</div>



<div>
    <ul class="pagination justify-content-center">
        <li class="page-item @(ViewBag.PageIndex==1?"disabled":"")">
            <a class="page-link" asp-action="Index" asp-route-page="1">&laquo;</a>
        </li>
        @for (int i = 1; i <= ViewBag.PageSum; i++)
        {
            <li class="page-item @(ViewBag.PageIndex==i?"active":"")">
                <a class="page-link" asp-action="Index" asp-route-page="@i"> @i </a> 
            </li>
        }
        <li class="page-item @(ViewBag.PageIndex==ViewBag.PageSum?"disabled":"")">
            <a class="page-link" asp-action="Index" asp-route-page="@ViewBag.PageSum">&raquo;</a>
        </li>
    </ul>
</div>